# variable


## global variable dd

    # vi /etc/mysql/my.cnf
    [mysqld]
    markettime=10
    # service mysqld restart

## global variable set

    set global markettime=10;
    set @@global.markettime=10;

## global variable get

    select @@global.markettime;
    show global variables like 'markettime';

## session variables set

    set   markettime=10;
    set @@markettime=10;

## session variables get

    select @@markettime;
