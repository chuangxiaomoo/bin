    VENC_SIZE_CIF = 1,			// CIF
    VENC_SIZE_D1 = 2,			// D1
    VENC_SIZE_720P = 3,			// 720P
    VENC_SIZE_UVGA = 4,			// UVGA
    VENC_SIZE_1080P = 5,		// 1080P
    VENC_SIZE_END
  } VENC_SIZE_E;

