#define ISUNSIGNED(a) (a >=0 && (a=~a,a >=0 ? (a=~a,1):(a=~a,0)))
#define swap(a,b) {a=a^b; b=a^b; a=a^b;}
#define max(a,b) {a > b ? a : b}

