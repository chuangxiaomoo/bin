
. 重命名表

    RENAME TABLE tbl_name TO new_tbl_name

    ALTER TABLE tbl_name RENAME TO new_tbl_name;

. 添加列    
    ALTER TABLE table_name ADD col_name  int(4) not null;
    ALTER TABLE mat_ma1020 ADD vax3      DECIMAL(12,2) NOT NULL DEFAULT 0;
                           ADD [COLUMN] column_name_1 column_1_definition [FIRST|AFTER existing_column],

. 添加列 to sepcific location 
    ALTER TABLE myTable ADD myNewColumn VARCHAR(255) AFTER myOtherColumn;
    ALTER TABLE d1 ADD avrg DECIMAL(6,2) NOT NULL DEFAULT 0 AFTER close;

    ALTER TABLE v5 ADD vv DECIMAL(6,2) NOT NULL DEFAULT 0 AFTER rio;
    ALTER TABLE v5 ADD vp3 DECIMAL(6,2) NOT NULL DEFAULT 0 AFTER vv;
    ALTER TABLE v5 ADD D TINYINT NOT NULL DEFAULT 0 AFTER M;
    ALTER TABLE v5 ADD N TINYINT NOT NULL DEFAULT 0 AFTER D;
    ALTER TABLE v5 ADD L_H5 DECIMAL(6,2) NOT NULL DEFAULT 0 AFTER L_H34;
    ALTER TABLE v5 ADD X TINYINT NOT NULL DEFAULT 0 AFTER N;
    ALTER TABLE v5 ADD U TINYINT NOT NULL DEFAULT 0 AFTER X;

    ALTER TABLE v5 ADD B13 DECIMAL(6,1) NOT NULL DEFAULT 0 AFTER H8;
    ALTER TABLE v5 ADD B21 DECIMAL(6,1) NOT NULL DEFAULT 0 AFTER B13;
    ALTER TABLE v5 ADD PL9 DECIMAL(6,1) NOT NULL DEFAULT 0 AFTER LH9;

    ALTER TABLE apeak ADD vq4 SMALLINT NOT NULL DEFAULT 0 AFTER v20;

    ALTER TABLE nmc2 ADD c3  SMALLINT NOT NULL DEFAULT 0 AFTER c10;

. 删除列
    ALTER TABLE table_name DROP COLUMN column_name
    ALTER TABLE vpeak DROP COLUMN ;
    ALTER TABLE hw DROP COLUMN N8;

    ALTER TABLE v5 CHANGE hhc L_H21;

    ALTER TABLE v5 DROP COLUMN B;
    ALTER TABLE v5 DROP COLUMN LH9;
    ALTER TABLE v5 DROP COLUMN hmx;
    ALTER TABLE v5 DROP COLUMN s80;
    ALTER TABLE v5 DROP COLUMN sq2;




    ALTER TABLE v5 DROP COLUMN N;
    ALTER TABLE v5 ADD F TINYINT NOT NULL DEFAULT 0 AFTER SB;

. 改变列名
    ALTER TABLE table_name 
        CHANGE [COLUMN] old_col_name new_col_name column_definition
            [FIRST|AFTER col_name]

    ALTER TABLE tbl_name CHANGE col_old col_new char(4) not null;

    ALTER TABLE apeak CHANGE i240 iq4 SMALLINT not null DEFAULT 0;
    ALTER TABLE apeak CHANGE a10 a10 DECIMAL(6,2) not null DEFAULT 0;
    ALTER TABLE apeak CHANGE v10 v10 DECIMAL(6,2) not null DEFAULT 0;

    ALTER TABLE  v5 CHANGE D27 D9 SMALLINT not null DEFAULT 0; 
    ALTER TABLE  v5 CHANGE F27 F9 SMALLINT not null DEFAULT 0; 

    ALTER TABLE  v5 CHANGE PL9 PL9 SMALLINT not null DEFAULT 0; 
    ALTER TABLE  v5 CHANGE BQ2 BQ2 SMALLINT not null DEFAULT 0; 
    ALTER TABLE  v5 CHANGE BQ4 BQ4 SMALLINT not null DEFAULT 0;
    ALTER TABLE  v5 CHANGE rio flut DECIMAL(6,1) not null DEFAULT 0;
    ALTER TABLE  v5 CHANGE h high DECIMAL(6,2) not null DEFAULT 0;
    ALTER TABLE  v5 CHANGE L_H5 LH9 DECIMAL(6,2) not null DEFAULT 0;

    ALTER TABLE  v5 CHANGE B55 B55 SMALLINT not null DEFAULT 0;
    ALTER TABLE  v5 CHANGE B13 B13 SMALLINT not null DEFAULT 0;
    ALTER TABLE  v5 CHANGE B21 B21 SMALLINT not null DEFAULT 0;

    ALTER TABLE v5 CHANGE S1 H TINYINT not null DEFAULT 0;
    ALTER TABLE v5 CHANGE n10 k TINYINT not null DEFAULT 0;
    ALTER TABLE v5 ADD k3 TINYINT NOT NULL DEFAULT 0 AFTER k;
    ALTER TABLE v5 ADD B90  SMALLINT NOT NULL DEFAULT 0 AFTER H8;
    ALTER TABLE v5 ADD S1 TINYINT NOT NULL DEFAULT 0 AFTER L_H61;
    ALTER TABLE v5 ADD LH5 DECIMAL(6,2) NOT NULL DEFAULT 0 AFTER LH9;

    ALTER TABLE  d1 CHANGE avrg avg DECIMAL(6,2) not null DEFAULT 0;
    ALTER TABLE td2 CHANGE avrg avg DECIMAL(6,2) not null DEFAULT 0;
    -- 曾经把 ALTER 写成了 ALERT，捣鼓了半天。

. 改变列的数据类型
    alter table tbl_name change id id1 varchar(10) not null;
    alter table mat_dde change speed speed DECIMAL(8,2) NOT NULL;

. 改变列属性(NULL 时不可改变属性和type)    
    ALTER TABLE min2 MODIFY code INT(6) ZEROFILL;
    ALTER TABLE d1 MODIFY avrg DECIMAL(6,2) NOT NULL DEFAULT 0;

. 创建索引
    alter table test add index (cn,id);
    alter table d1 add index (date);

. 删除索引
    show INDEX from day;
    alter table test drop index Key_name;   -- Key_name is index_name，复合索引也只对应一个Key_name

. 重建索引，要先删除
    SHOW INDEX FROM vpeak;
    ALTER TABLE vpeak DROP INDEX date_2;
    CREATE INDEX code on vpeak (code,date);

