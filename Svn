#! /bin/bash


function fn_usage()
{
    echo "
        ----------- Usage --------------
        a   find ! -name '.' -a -name '*' | xargs -I{} svn add --force {}  | cat -n
        c   ci [files...]
        D   {?|M}
        d   diff
        dp  diff -r 'PREV'
        q   -q status
        r   revert -R {file|dir}
        s   status
        u   update
    "
}

function fn_main()
{
    filelist="${@:2}"

    case $1 in
    a)
        find ! -name '.' -a -name '*' | xargs -I{} svn add --force {}  | cat -n
        ;;
    c|ci)
        svn ci $filelist
        ;;
    D)
        {
        echo "Deleting: "
        svn status | grep "^${filelist:-?}" | tee /dev/stderr |  awk '{print $2}' | xargs -I{} rm -rf {}
        } 2>&1 | sed 's/^/\t/g'
        ;;
    d|diff)
        svn diff $filelist
        ;;
    dp)
        svn diff -r 'PREV' $filelist
        ;;
    r)
        [ -z "$filelist" ] && echo "Error: file... must be dedicated" && exit
        svn --depth=infinity revert $filelist
        ;;
    s)
        svn status $filelist
        ;;
    q)
        svn -q status
        ;;
    u|up)
        svn up $filelist
        ;;
    h)
        fn_usage
        ;;
    *)
        fn_usage
        svn status | sed 's/^/\t/g'
        ;;
    esac

}

fn_main $@
