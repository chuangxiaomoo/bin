class good_characteristics {
    just_do_it();               // 最有效的，是即刻行动
    delibrate_practice();       // 大师与新手的区别在于: 大师掌握了大量的套路
    chase_delibrate_perfect();  // [](+/不需要凡事追求完美 book_jj_精进.如何成为一个很厉害的人)
};

class zhangxiaomoo {
    class human_nature;
    class good_characteristics;

    thinking();
    memorizing();               // visual_score
    sleeping();
    speaking();                 // language
    emotion();                  // 共情；情商高; 彼此成全，让对方有机会展现自己的特点

    decision_making();
    problem_solving();
};

int just_do_it()
{
}

int problem_solving()
{
    problem = confliction = exception - curr_status;
    1 降低exception
    2 解决confliction
        1 便利的替代性活动
            提高逃避的成本: 删除电脑里所有的电影、游戏，剪断网线，把手机换成非智能机等等
        2 just_do_it() + delibrate_practice()
}

int delibrate_practice()
{
    0 problem = 大师 - 新手 = 更多的思考的方式 + 更多的解决方案(套路)
    1 目标明确(将目标分解成一系列的小任务)
    2 保持专注
    3 及时反馈
    4 逐步走出舒适区(一直做自己擅长的事情不会有进步)
}

int memorizing()
{
    1 verbal_score            // 词语记忆
    2 visual_score            // 视觉记忆, periodic table
}

