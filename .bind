# read 可以读输入组合
# ^[ = PuTTy.Alt = SecureCRT.Esc
# \C = Ctrl
# 

bind '"\ei": "192.168.9."'                  # 
bind '"\el": "127.0.0.1"'                   # Local Loopback
bind '"\ee": "\C-asudo \C-e"'               # Alt-e 自动输入 sudo
bind '"\C-x\C-x": beginning-of-line'        # any readline-compatible environment like Bash, python and mysql

bind '"\C-f":vi-fWord'                      # move forward by whitespace-delimited word
bind '"\C-b":vi-bWord'

